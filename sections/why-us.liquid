{%- render 'stylesheet'
  , name: 'why-us' -%}

<div class="section-why-us">
  <div class="container">
    <div class="why-us__content">
      <div class="why-us-section__title-wrapper">
        {% if section.settings.section_title %}
        <h2 class="why-us-section__title">{{ section.settings.section_title }}</h2>
      {% endif %}
      </div>

      <div class="why-us-section__items">
        {% if section.settings.section_subtitle %}
          <p class="why-us-section__subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
        <div class="why-us-section__item-wrapper">
          {% for block in section.blocks %}
            <div class="why-us-section__item">
              {% if block.settings.metric_title %}
                <h3 class="why-us-section__item-title">{{ block.settings.metric_title }}</h3>
              {% endif %}
              {% if block.settings.metric_subtitle %}
                <p class="why-us-section__item-subtitle">{{ block.settings.metric_subtitle }}</p>
              {% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Why Us Section",
    "settings": [
      {
        "type": "header",
        "content": "Why Us Section Settings"
      },
      {
        "type": "text",
        "id": "section_title",
        "label": "Section Title",
        "default": "Why you should choose us?"
      },
      {
        "type": "text",
        "id": "section_subtitle",
        "label": "Section Subtitle",
        "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique. Duis cursus, mi quis viverra ornare, eros dolor interdum nulla, ut commodo diam libero vitae erat."
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Section Metrics",
        "settings": [
          {
            "type": "text",
            "id": "metric_title",
            "label": "Metric Title",
            "default": "99%"
          },
          {
            "type": "text",
            "id": "metric_subtitle",
            "label": "Metric Subtitle",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Why Us Section"
      }
    ]
  }
{% endschema %}